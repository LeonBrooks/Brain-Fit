<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActMRegister">

    <EditText
        android:id="@+id/textInput_amr_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_amr_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="new Username"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text_amr_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Registration"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textInput_aml_Username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textInput_amr_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInput_amr_Username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="valid Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/text_amj_Title"
        app:layout_constraintTop_toBottomOf="@+id/text_amj_Title" />

    <EditText
        android:id="@+id/textInput_amr_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInput_amr_Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="new Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/textInput_aml_Username"
        app:layout_constraintTop_toBottomOf="@+id/textInput_aml_Username" />

    <EditText
        android:id="@+id/textInput_amr_PasswordRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInput_amr_Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="repeat new Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/textInput_aml_Username"
        app:layout_constraintTop_toBottomOf="@+id/textInput_aml_Username" />

    <Button
        android:id="@+id/button_amr_Register"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInput_amr_PasswordRepeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/textInput_aml_Password"
        app:layout_constraintTop_toBottomOf="@+id/textInput_aml_Password" />

    <TextView
        android:id="@+id/text_amr_Info"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_amr_Register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="You can register with a valid e-mail address (Password has to be 6 signs long)"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@+id/button_amj_CreateTeam"
        app:layout_constraintTop_toBottomOf="@+id/button_amj_CreateTeam" />

    <ImageView
        android:id="@+id/image_amr_Back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/baseline_arrow_back_black_18dp" />

</RelativeLayout>