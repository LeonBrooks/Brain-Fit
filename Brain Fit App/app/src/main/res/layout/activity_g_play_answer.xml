<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActGPlayAnswer">

    <TextView
        android:id="@+id/text_agpa_question"
        android:layout_width="344dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:lineSpacingExtra="24sp"
        android:text="Placeholder Question?\nPlaceholder Question?\nPlaceholder Question?\nPlaceholder Question?"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_agpa_Points"
        android:layout_width="369dp"
        android:layout_height="180dp"
        android:layout_below="@+id/text_agpa_question"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/text_agpa_question"
        android:layout_alignEnd="@+id/text_agpa_question"
        android:layout_marginStart="0dp"
        android:layout_marginTop="179dp"
        android:lineSpacingExtra="24sp"
        android:text="Right!\n- 2 Points -\nYour opponent was wrong or gave this question to a mate"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_agpa_FalseAnswerLabel"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_agpa_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Your answer was wrong. Correct answer:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_agpa_RightAnswer"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_agpa_FalseAnswerLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/rightAnwerPW"
        android:text="This is the correct answer placeholdertext"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_agpa_SolutionWasRightLabel"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_agpa_question"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/text_agpa_question"
        android:layout_alignEnd="@+id/text_agpa_question"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="Correct!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_agpa_MiddleRightAnswer"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_agpa_SolutionWasRightLabel"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/correct"
        android:text="This is the correct answer placeholder"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button_agpa_Continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_agpa_Points"
        android:layout_marginTop="15dp"
        android:text="Continue" />

    <TextView
        android:id="@+id/test_agpa_QuestionSentOn"
        android:layout_width="369dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/text_agpa_question"
        android:layout_alignTop="@+id/text_agpa_question"
        android:layout_alignEnd="@+id/text_agpa_question"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="0dp"
        android:text="You sent on the question."
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/line_agpa_Line1"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@+id/test_agpa_Question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingTop="5dip"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/line_agpa_Line2"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_agpa_Points"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-198dp"
        android:layout_marginBottom="340dp"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingTop="5dip"
        tools:ignore="UnknownId" />

</RelativeLayout>