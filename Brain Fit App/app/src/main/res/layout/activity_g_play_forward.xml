<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActGPlayForward">

    <TextView
        android:id="@+id/text_agpf_Forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Forward Question?"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/text_agpf_Topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_agpf_Forward"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Question Topic"
        android:textSize="35sp" />

    <Button
        android:id="@+id/button_agpf_Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_agpf_Topic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="200dp"
        android:text="Yes" />

    <Button
        android:id="@+id/button_agpf_No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_agpf_Topic"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="90dp"
        android:text="No" />

</RelativeLayout>