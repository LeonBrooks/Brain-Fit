<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActGEndResult">

    <TextView
        android:id="@+id/text_ager_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Result"
        android:textSize="50sp" />

    <ScrollView
        android:id="@+id/sv_ager_resultContainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_ager_Sum"
        android:layout_below="@+id/text_ager_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:id="@+id/ll_ager_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_ager_Sum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_ager_continue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_ager_SumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sum"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_ager_SumPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="placeholder_points"
            android:textAlignment="textEnd"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_ager_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Continue" />

</RelativeLayout>