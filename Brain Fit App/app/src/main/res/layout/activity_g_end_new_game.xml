<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActGEndNewGame">

    <TextView
        android:id="@+id/text_agen_NewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Keep Playing?"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button_agen_Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_agen_NewGame"
        android:layout_alignStart="@+id/text_agen_NewGame"
        android:layout_marginStart="20dp"
        android:layout_marginTop="200dp"
        android:text="Yes" />

    <Button
        android:id="@+id/button_agen_No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_agen_NewGame"
        android:layout_alignEnd="@+id/text_agen_NewGame"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:text="No" />
</RelativeLayout>