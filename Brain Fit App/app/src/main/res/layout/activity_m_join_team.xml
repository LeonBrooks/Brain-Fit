<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActMJoinTeam">

    <TextView
        android:id="@+id/text_amj_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Join a team"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/textInput_aml_Username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_amj_CreateTeam"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInput_amj_TeamnameCreateTeam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create new Team"
        app:layout_constraintEnd_toEndOf="@+id/textInput_aml_Password"
        app:layout_constraintTop_toBottomOf="@+id/textInput_aml_Password" />

    <Button
        android:id="@+id/button_amj_JoinRandom"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_amj_Line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Join random team"
        app:layout_constraintEnd_toEndOf="@+id/textInput_aml_Password"
        app:layout_constraintTop_toBottomOf="@+id/textInput_aml_Password" />

    <Button
        android:id="@+id/button_amj_JoinTeam"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInput_amj_TeamnameJoinTeam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Join this team"
        app:layout_constraintEnd_toEndOf="@+id/textInput_aml_Password"
        app:layout_constraintTop_toBottomOf="@+id/textInput_aml_Password" />

    <TextView
        android:id="@+id/text_amj_GameInfo"
        android:layout_width="366dp"
        android:layout_height="90dp"
        android:layout_below="@+id/text_amj_Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Choose your team wisely! You have to rely on your teammates and their knowledge. You will send them the questions to categories you aren't fit enough to answer."
        app:layout_constraintEnd_toEndOf="@+id/button_amj_CreateTeam"
        app:layout_constraintTop_toBottomOf="@+id/button_amj_CreateTeam" />


    <EditText
        android:id="@+id/textInput_amj_TeamnameJoinTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_amj_Line3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Team-ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/textInput_amj_TeamnameCreateTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_amj_Line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter new Teamname"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/line_amj_Line1"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_amj_GameInfo"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingTop="5dip"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/line_amj_Line4"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingTop="5dip"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/line_amj_Line2"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/button_amj_JoinRandom"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingTop="5dip"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/line_amj_Line3"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/button_amj_CreateTeam"
        android:layout_marginTop="20dp"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingTop="5dip"
        tools:ignore="UnknownId" />


</RelativeLayout>
